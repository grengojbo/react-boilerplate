{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome against localhost, with sourcemaps",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/*",
      "runtimeArgs": [
        "--disable-web-security",
        "--user-data-dir",
        "--remote-debugging-port=9222"
      ],
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "Attach to Chrome, with sourcemaps",
      "type": "chrome",
      "request": "attach",
      "url": "http://localhost:3000/*",
      "port": 9222,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}"
    },
    {
      "name": "Debug Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
      "stopOnEntry": false,
      "args": [
        "--runInBand --config ${workspaceRoot}/jese.json"
      ],
      "cwd": "${workspaceRoot}",
      "preLaunchTask": "tsc",
      "runtimeExecutable": null,
      "runtimeArgs": [
        "--harmony"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outDir": null,
      "port": 9070
    }
  ]
}